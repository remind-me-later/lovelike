{
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"files": ["dist"],
	"compilerOptions": {
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"lib": ["esnext", "dom"],
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true
	},
	"lint": {
		"include": ["src/"]
	},
	"fmt": {
		"include": ["src/", "./*.json", "./*.md", "./*.html"],
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true
	}
}
